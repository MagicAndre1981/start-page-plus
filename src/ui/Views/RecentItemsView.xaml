<UserControl
    x:Class="StartPagePlus.UI.Views.RecentItemsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:StartPagePlus.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StartPagePlus.UI;component/Resources/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/StartPagePlus.UI;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border
        Margin="0,10,10,10"
        Background="{DynamicResource ColumnBackgroundBrush}"
        BorderBrush="{DynamicResource ColumnBorderBrush}"
        BorderThickness="1"
        >
        <DockPanel LastChildFill="true">
            <TextBlock x:Name="Heading"
                DockPanel.Dock="Top"
                Style="{StaticResource ColumnHeadingStyle}"
                Text="{Binding Heading}"
                />

            <TextBox x:Name="Filter"
                Margin="10,0,10,6"
                Background="Transparent"
                DockPanel.Dock="Top"
                FontSize="14"
                Foreground="{DynamicResource ColumnHeadingBrush}"
                Text="{Binding Filter}"
                Visibility="{Binding FilterVisible, Converter={c:BoolToVisibilityConverter}}"
                />

            <ItemsControl x:Name="Commands"
                Margin="10,5"
                DockPanel.Dock="bottom"
                ItemsSource="{Binding Commands}"
                >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            HorizontalAlignment="Center"
                            Command="{Binding Command}"
                            Content="{Binding Name}"
                            Style="{StaticResource ColumnCommandStyle}"
                            Visibility="{Binding FilterVisible, Converter={c:BoolToVisibilityConverter}}"
                            />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ListView x:Name="RecentItems"
                Margin="10,0,10,0"
                Background="Transparent"
                BorderThickness="0"
                DockPanel.Dock="Top"
                ItemsSource="{Binding Items}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <imaging:CrispImage
                                Name="RecentItemImage"
                                Width="24"
                                Height="24"
                                Margin="0,3,5,5"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Left"
                                Moniker="{Binding Extension, Converter={c:ExtensionToMonikerConverter}}"
                                />

                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Name="Name"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    FontFamily="Segoe WP Semilight"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource ItemNameBrush}"
                                    Text="{Binding Name}"
                                    TextWrapping="Wrap"
                                    />

                                <TextBlock x:Name="Folder"
                                    Margin="2"
                                    Padding="0,2,0,2"
                                    HorizontalAlignment="Left"
                                    FontFamily="Segoe WP Semilight"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="{DynamicResource ItemDescriptionBrush}"
                                    Text="{Binding Folder}"
                                    TextWrapping="Wrap"
                                    />
                            </StackPanel>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </Border>
</UserControl>