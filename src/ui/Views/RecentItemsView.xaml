<UserControl
    x:Class="StartPagePlus.UI.Views.RecentItemsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:StartPagePlus.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:utilities="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StartPagePlus.UI;component/Resources/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/StartPagePlus.UI;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <utilities:BrushToColorConverter x:Key="BrushToColorConverter"/>

            <!--  https://stackoverflow.com/questions/3894195/wpf-collectionviewsource-grouping  -->

            <CollectionViewSource x:Key="GroupedItems"
                Source="{Binding Items}"
                >
                <CollectionViewSource.SortDescriptions>
                    <!--  this will sort groups  -->
                    <scm:SortDescription
                        Direction="Ascending"
                        PropertyName="DatePeriod"
                        />

                    <!--  this will sort items  -->
                    <scm:SortDescription
                        Direction="Ascending"
                        PropertyName="Date"
                        />
                </CollectionViewSource.SortDescriptions>

                <CollectionViewSource.GroupDescriptions>
                    <dat:PropertyGroupDescription x:Name="GroupByDatePeriod"
                        PropertyName="DatePeriod"
                        />
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{StaticResource ColumnStyle}">
        <DockPanel x:Name="LayoutRoot"
            LastChildFill="true"
            >
            <TextBlock x:Name="Heading"
                DockPanel.Dock="Top"
                Style="{StaticResource ColumnHeadingStyle}"
                Text="{Binding Heading}"
                />

            <TextBox x:Name="Filter"
                Margin="10,0,10,6"
                Background="Transparent"
                DockPanel.Dock="Top"
                FontSize="14"
                Foreground="{DynamicResource ColumnHeadingBrush}"
                Text="{Binding Filter}"
                Visibility="{Binding Filtered, Converter={c:BoolToVisibilityConverter}}"
                />

            <ItemsControl x:Name="Commands"
                Style="{StaticResource ColumnCommandsStyle}"
                />

            <ListView x:Name="RecentItemsListView"
                ItemsSource="{Binding Source={StaticResource GroupedItems}}"
                Style="{StaticResource ColumnListStyle}"
                >
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,0,5,0"
                                                    FontSize="15"
                                                    FontWeight="Medium"
                                                    Foreground="{DynamicResource MenuInactiveBrush}"
                                                    Text="{Binding Path=Name, Converter={c:DatePeriodIdToDatePeriodStringConverter}}"
                                                    />
                                                <ItemsPresenter/>
                                            </StackPanel>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ListView.GroupStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel x:Name="RecentItemContainer"
                            LastChildFill="true"
                            >
                            <imaging:CrispImage x:Name="RecentItemImage"
                                Width="24"
                                Height="24"
                                Margin="0,3,5,5"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Left"
                                Moniker="{Binding Key, Converter={c:ExtensionToMonikerConverter}}"
                                />

                            <StackPanel x:Name="RecentItemCommandContainer"
                                DockPanel.Dock="Right"
                                Orientation="Vertical"
                                >

                                <Button x:Name="RecentItemPinButton"
                                    Margin="0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{Binding PinCommand}"
                                    >
                                    <imaging:CrispImage x:Name="RecentItemPinImage"
                                        Width="16"
                                        Height="16"
                                        Margin="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Moniker="{Binding Pinned, Converter={c:BoolToPinConverter}}"
                                        Visibility="{Binding Pinned, Converter={c:BoolToVisibilityConverter}}"
                                        />
                                </Button>
                            </StackPanel>

                            <StackPanel x:Name="RecentItemTextContainer"
                                DockPanel.Dock="Top"
                                Orientation="Vertical"
                                >
                                <TextBlock x:Name="RecentItemName"
                                    Margin="3"
                                    HorizontalAlignment="Stretch"
                                    FontFamily="Segoe WP Semilight"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource ItemNameBrush}"
                                    Text="{Binding Name}"
                                    TextWrapping="Wrap"
                                    />

                                <TextBlock x:Name="RecentItemDescription"
                                    Margin="3"
                                    Padding="0"
                                    HorizontalAlignment="Stretch"
                                    FontFamily="Segoe WP Semilight"
                                    FontSize="12"
                                    FontWeight="Normal"
                                    Foreground="{DynamicResource ItemDescriptionBrush}"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap"
                                    />
                            </StackPanel>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </Border>
</UserControl>