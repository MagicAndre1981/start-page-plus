<UserControl
    x:Class="StartPagePlus.UI.Views.RecentItemsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StartPagePlus.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <Border
        Margin="0,10,10,10"
        Background="{DynamicResource ColumnBackgroundBrush}"
        BorderBrush="{DynamicResource ColumnBorderBrush}"
        BorderThickness="1"
        >
        <DockPanel LastChildFill="true">
            <TextBlock x:Name="Heading"
                Margin="10,20,10,10"
                Padding="5,0,0,0"
                DockPanel.Dock="Top"
                FontSize="20"
                Foreground="{DynamicResource ColumnHeadingBrush}"
                Text="{Binding Heading}"
                />

            <TextBox x:Name="Filter"
                Margin="10,0,10,10"
                Background="Transparent"
                DockPanel.Dock="Top"
                FontSize="14"
                Foreground="{DynamicResource ColumnHeadingBrush}"
                Text="{Binding Filter}"
                Visibility="{Binding FilterVisible}"
                />

            <ItemsControl x:Name="Commands"
                Height="20"
                Margin="10,5"
                DockPanel.Dock="bottom"
                ItemsSource="{Binding Commands}"
                >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid
                            Background="red"
                            Rows="1"
                            />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <ListView x:Name="RecentItems"
                Margin="10,0,10,0"
                Background="Transparent"
                DockPanel.Dock="Top"
                >
            </ListView>
        </DockPanel>
    </Border>
</UserControl>
